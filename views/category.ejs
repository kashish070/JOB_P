<%- include("./header.ejs")%>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            display: flex;
        }
        .sidebar {
            width: 25%;
            background-color: #f4f4f4;
            padding: 20px;
            box-sizing: border-box;
            border-radius: 10px;
           
        }
        .content {
            width: 75%;
            padding: 20px;
            box-sizing: border-box;
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .dropdown {
            position: relative;
            display: inline-block;
            margin-bottom: 20px;
        }
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }
        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }
        .dropdown-content a:hover {
            background-color: #f1f1f1;
        }
        .dropdown:hover .dropdown-content {
            display: block;
        }
        .card {
            background-color: white;
            padding: 20px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            margin-bottom: 20px;
           
        }
        

        .card h3 {
            margin-top: 0;
        }
        .card a {
            display: block;
            color: #3498db;
            text-decoration: none;
            margin-top: 10px;
        }
        .card a:hover {
            text-decoration: underline;
        }
        .content .card {
            width: calc(50.333% - 20px); /* 3 cards in a row with a gap of 20px */
        }
         .card img {
            border-radius: 50%;
            width: 100px;
            height: 100px;
            display: block;
            margin: 0 auto 20px;
        }
        .apply-button {
            display: block;
            width: 100%;
            padding: 10px;
            text-align: center;
            background-color: black;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-top: 20px;
        }
        .apply-button:hover {
            background-color: #2980b9;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="sidebar mt-5 mb-3">
        <h2>Sidebar</h2>
       
        <div class="card">
            <%categories.forEach(element => {%>
                <a href="/category/<%=element._id%>"><%=element.name%></a>
            <%})%>
          
          
        </div>
    </div>
    <div class="content mt-5">
        <% if(jobs){%>
            <%jobs.forEach(element => {%>
                <div class="card">
                    <img src="<%=element.image.url%>" alt="Profile Picture">
                    <h3><%=element.title%></h3>
                    <p><%=element.description%></p>
                    <a href="/job_details/<%=element._id%>" class="btn btn-success" style="color: white;">Apply Now</a>
                </div>
            <%})%>
           
           
       <% }%>
    </div>
</div>

<%- include("./footer.ejs")%>
