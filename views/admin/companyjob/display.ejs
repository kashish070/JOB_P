<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Apply Job</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  <div class="card">
    <div class="card-header">
      <!-- <h3 class="card-title">Category Display</h3> -->
      <!-- <button
        type="button"
        class="btn btn-info"
        data-toggle="modal"
        data-target="#category"
      >
        Add Category
      </button> -->
    </div>
    <!-- /.card-header -->
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Job Tilte</th>
            
            <th>Resume</th>
            <th>Status</th>
            <th>Message</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% i=1 %>
          <% d.forEach((item)=>{%>

          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            
            <td><%= item.companyname %></td>
            
            
            
            <td>
              <img src="<%= item.image.url %>" width="50" height="50" alt="" />
            </td>
            <td><%= item.status %></td>
            <td><%= item.message %></td>
            <td>
              <form  action="/updateStatus/<%= item.id %>" method="post">

                <select name="status"  class="form-control">
                  <option value="Sort Listed">Sort Listed</option>
                  <option value="Rejected">Rejected</option>
                </select>
            </td>
            <td>
              <textarea name="message" class="form-control"></textarea>
              <br>
              <button type="submit" class="btn btn-info">Update</button>
              </form>
              
            </td>
            
          </tr>

          <% }) %>
        </tbody>
        <!-- <tfoot>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Image</th>
            <th></th>
          </tr>
        </tfoot> -->
      </table>
    </div>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->
  <!-- /.card -->/

 
  <!-- /.modal -->
</div>
