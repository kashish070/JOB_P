<%-include("header.ejs") %> <br /><br />
<div class="container-fluid">
  <div class="container">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-lg">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <img
                class="bgcolor"
                src="/img/login.png"
                style="width: 100%; height: 100%; background-size: cover"
                alt=""
              />
            </div>
            <div class="col-lg-6 py-3">
              <span class="d-flex justify-content-center mb-3"
                ><img src="/img/logo.png" style="width: 100px" alt=""
              /></span>
              <h4 class="text-center">Sign-in Here</h4>
              <% if(msg.length>0) { %>
              <div class="alert alert-success"><%= msg %></div>
              <%} %> <% if(msg1.length>0) { %>
              <div class="alert alert-danger"><%= msg1 %></div>
              <%} %>
              <form action="/verifylogin" method="post">
                <div class="form-row">
                  <div class="col-sm-10 mx-auto">
                    <input
                      type="email"
                      name="email"
                      placeholder="Email-Address"
                      class="form-control my-4 py-2 px-3"
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-sm-10 mx-auto">
                    <input
                      type="password"
                      name="password"
                      placeholder="******"
                      class="form-control my-4 py-2 px-3"
                    />
                  </div>
                </div>
                <div class="form-row">
                  <div class="col-sm-10 mx-auto">
                    <button type="submit" class="btn btn-dark mb-3">
                      Login
                    </button>
                    <br />
                    <a href="/forget">Forget password</a>
                    <p>
                      Don't have an account?
                      <a href="/registration">Register here</a>
                    </p>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<br /><br />
<%-include("footer.ejs") %>
